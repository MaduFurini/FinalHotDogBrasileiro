<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu de Hot Dogs</title>
    <link rel="stylesheet" href="/css/home/pedidoCliente.css">
    <link rel="shortcut icon" href="/images/logo.png">
    <title>Hot Dog Brasileiro | Pedidos</title>
</head>
<body>
    <main>
        <header>
            <nav class="navbar">
                <div>
                    <img src="/images/logo.png" alt="Logo Hot Dog" class="logo">
                </div>
                <div class="title">
                    <h1 class="menu-title">Pedidos</h1>
                </div>
                <div class="nav-links">
                    <a href="/home">Voltar</a>
                </div>
            </nav>
        </header>

        <% let produtosEncontrados = 0; %>


        <% if (pedidos && pedidos.length > 0) { %>
            <% produtosEncontrados++; %>
            <section class="section">
            <% pedidos.forEach(pedido => { %>
                <section class="section">
                    <div class="menu-item">
                        <h3>Código do Pedido: <%= pedido.codigo %></h3>
                        <% pedido.produtos.forEach(produto => { %>
                            <p><strong>Produto:</strong> <%= produto.nome_produto %></p>
                            <p><strong>Quantidade:</strong> <%= produto.quantidade %></p>
                            <br>
                            <hr />
                        <% }) %>
                        <p><strong>Status:</strong> <%= pedido.status %></p>
                    </div>
                </section>
            <% }) %>
        <% } %>


        <% if (produtosEncontrados === 0) { %>
            <div class="no-products">
                <img src="/images/noProduct.png" alt="Nenhum produto encontrado" />
                <p>Ops! Parece que você ainda não realizou pedidos</p>
            </div>
        <% } %>
    </main>


     <footer>
        <img src="/images/logo.png" alt="">

        <div class="footer-info-img">
            <a href=""><img src="data:image/png;base64,"/></a>
            <a href=""><img src="data:image/png;base64,"/></a>
            <a href=""><img src="data:image/png;base64,"/></a>
        </div>

        <div class="footer-info-content">
            <p>HORÁRIO DE FUNCIONAMENTO</p>
            <p>QUARTA À SEGUNDA</p>
            <p>19H00 A 22H00</p>

            <br>
            <p>R.Dr.Abrão Venturi Filho, 60, Mococa</p>
        </div>
    </footer>

   <script src="/js/interactions/cardapio/cardapio.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
